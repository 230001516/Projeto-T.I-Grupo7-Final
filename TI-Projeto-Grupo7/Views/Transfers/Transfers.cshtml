@{
    ViewData["Title"] = "Transfers";
}

<link href="~/css/Transferencias.css" rel="stylesheet"/>

<header id="header">
    <div class="container position-relative d-flex align-items-center justify-content-between">
        <a href="@Url.Action("Index","Home")" class="logo d-flex align-items-center">
            <img src="~/assets/img/logo2.png" alt="">
            <h1 class="sitename">EvoluBank</h1>
        </a>
    </div>
</header>

<div class="transfer-container">
    <h2>Transferência</h2>
    <form asp-action="MakeTransfer" method="post">
        <div class="form-group">
            <label for="id_account">Origin Account</label>
            <input type="text" id="id_account" name="id_account" required>
        </div>
        <div class="form-group">
            <label for="account_number">Destination account</label>
            <input type="text" id="account_number" name="account_number" required>
        </div>
        <div class="form-group">
            <label for="transfer_value">Amount (EUR)</label>
            <input type="number" id="transfer_value" name="transfer_value" min="0.01" placeholder="Amount to transfer" required>
        </div>
        <button type="submit" class="submit-btn">Transferir</button>
    </form>
</div>
